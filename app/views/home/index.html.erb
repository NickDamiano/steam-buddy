<header>
	<h1 class="main-header">Steam Buddy</h1>
</header>
<div class="row main-content">
<%= form_tag("/main", method: 'post', :id => "id1", class: "name-form") do %>
<% if @error %>
	<div class="form-group has-error has-feedback">
<% else %>
	<div class="form-group">
<% end %>
	<% if @error %>
		 <%= text_field_tag :user, @user_text, 
		 :size => "35 X 10", class: "form-control input-lg name-text-field", :placeholder =>
		 "Paste a link to your Steam profile"
		 %>
	<% else %>
		<%= text_field_tag :user, nil, :placeholder =>
		 "Paste a link to your Steam profile", 
		 :size => "35 X 10", class: "form-control input-lg name-text-field"
		 %>
	<% end %>
	<% if @error %>
		<p class="error"><%= @error %></p>
	<% end %>
</div>
	<%= submit_tag("Submit", class: "btn btn-default initial-form-btn loading", id: "initial-form-btn") %>
<% end %>
<div id='profile_suggestion'>
<a href="#" role="button" class="btn popovers" id="popovers" data-toggle="popover" title="" data-content="1. <a href='steam://url/SteamIDControlPage'>Open Steam profile page</a>
</br>2. Copy the URL from the top of the Steam application
</br>3. If you do not see the link, right click anywhere and select 'Copy Page URL'" data-placement="bottom">What's my Steam Profile URL?</a>
</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('.loading').on('click', function() {
			$(this).prop('value', 'Loading...');
		});
		$("[data-toggle=popover]").popover({html:true});
		$('.main-header').addClass('animated bounceInLeft');
		$('.main-content').addClass('animated bounceInRight');
	});
</script>

